# Server Configuration
SERVER_URL=http://localhost:5001

# Device Configuration
DEVICE_TOKEN=your-jwt-token-here

# Display Configuration
DISPLAY_WIDTH=1920
DISPLAY_HEIGHT=1080
KIOSK_MODE=true

# Browser Configuration
# REQUIRED for Raspberry Pi (uses system Chromium):
# Modern Raspberry Pi OS / Debian uses /usr/bin/chromium
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
# Older Raspberry Pi OS used /usr/bin/chromium-browser
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Health Monitoring
HEALTH_CHECK_INTERVAL=60000
SCREENSHOT_INTERVAL=30000

# Logging
LOG_LEVEL=info
